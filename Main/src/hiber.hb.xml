<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    

<hibernate-mapping>

<class name="org.bookstore.Main.Users" table="users">
<id column="id" name="id" type="java.lang.Integer"></id>
<property column="name" name="name" type="java.lang.String"/>
<property column="email" name="email" type="java.lang.String"/>
<property column="password" name="password" type="java.lang.String"/>
</class>

</hibernate-mapping>